// Production için Prisma Schema
// Bu dosyayı schema.prisma olarak kopyalayın ve DATABASE_URL'i güncelleyin

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Production için PostgreSQL
  url      = env("DATABASE_URL")
}

// Aşağıdaki modeller aynı kalır
model Restaurant {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  theme       String   @default("default")
  language    String   @default("tr") // tr, en, de, vb.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  categories  Category[]
  orders      Order[]
  admin       Admin?
  translations RestaurantTranslation[]
}

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  restaurantId String   @unique
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Category {
  id           String   @id @default(cuid())
  name         String
  description  String?
  image        String?
  order        Int      @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  products     Product[]
  translations CategoryTranslation[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  isAvailable Boolean  @default(true)
  prepMinMinutes Int   @default(5)  // Tahmini hazırlama süresi (min, dakika)
  prepMaxMinutes Int   @default(10) // Tahmini hazırlama süresi (max, dakika)
  order       Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]
  translations ProductTranslation[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RestaurantTranslation {
  id           String   @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  language     String   // tr, en, de, ru, ar, fr, es...
  name         String
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([restaurantId, language])
}

model CategoryTranslation {
  id         String   @id @default(cuid())
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  language   String   // tr, en, de, ru, ar, fr, es...
  name       String
  description String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([categoryId, language])
}

model ProductTranslation {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  language   String   // tr, en, de, ru, ar, fr, es...
  name       String
  description String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([productId, language])
}

model Order {
  id           String   @id @default(cuid())
  tableNumber  String?
  customerName String?
  customerPhone String?
  status       String   @default("pending") // pending, confirmed, preparing, ready, completed, cancelled
  total        Float
  orderType    String   @default("restaurant") // restaurant | takeaway
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  items        OrderItem[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Float
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}
